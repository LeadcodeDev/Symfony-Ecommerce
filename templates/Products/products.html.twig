{% extends "base.html.twig" %}

{% block stylesheets %}
<style>
    .navbar {
        background-color: #212529 !important;
        position: sticky;
    }
</style>
{% endblock %}

{% block body %}
    <section class="page-section bg-light" id="products">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Produits</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
            <div class="row">
            {% for product in products %}
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="products-item">
                        <a class="products-link" href={{ path('product_detail', {slugCategory: product.category.slug, slugProduct: product.slug, id: product.id}) }}>
                            <div class="products-hover">
                                <div class="products-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src={{ asset('assets/img/products/01-thumbnail.jpg') }} alt="" />
                        </a>
                        <div class="products-caption">
                            <div class="products-caption-heading">{{ product.label }}</div>
                            <div class="products-caption-subheading text-muted">{{ product.category.label }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}