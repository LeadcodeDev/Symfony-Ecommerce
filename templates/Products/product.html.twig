{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
<style>
    .navbar {
        background-color: #212529 !important;
        position: sticky;
    }
</style>
{% endblock %}

{% block body %}
    <div class="mx-auto w-75 py-5">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid" alt={{ product.label }}>
            </div>
            <div class="col-md-8">
                <h1 class="display-4">{{ product.label }}</h1>
                <p class="lead">{{ product.formattedPrice }}</p>
                <p class="text-secondary pt-3">{{ product.describes }}</p>
                <div class="float-right">
                    {% if not inCart %}
                        <a href={{ path('cart_add', { id: product.id }) }} class="btn btn-primary"><i class="fas fa-cart-plus"></i> Ajouter au panier</a>
                    {% else %}
                        <a href={{ path('private_account_index') }} class="btn btn-primary">Aller voir le pannier</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}